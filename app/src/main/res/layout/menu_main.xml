<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/topinfo_ban_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_menu_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="登录网易云音乐"
                    android:textColor="@color/whitesmoke"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/tv_menu_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/start_btn_right"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:paddingTop="@dimen/padding_small"
                    android:text="立即登录"
                    android:textColor="@color/white" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_menu_night"
                style="@style/Menu.LinearLayout">

                <ImageView
                    style="@style/Menu.Image"
                    android:src="@drawable/topmenu_icn_night" />

                <TextView
                    style="@style/Menu.Text"
                    android:text="夜间模式" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_menu_time"
                style="@style/Menu.LinearLayout">

                <TextView
                    style="@style/Menu.Image"
                    android:background="@drawable/topmenu_icn_time" />

                <TextView
                    style="@style/Menu.Text"
                    android:text="定时停止播放" />

                <TextView
                    android:id="@+id/tv_menu_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="right" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_menu_setting"
                style="@style/Menu.LinearLayout">

                <ImageView
                    style="@style/Menu.Image"
                    android:src="@drawable/topmenu_icn_set" />

                <TextView
                    style="@style/Menu.Text"
                    android:text="设置" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_menu_exit"
                style="@style/Menu.LinearLayout">

                <ImageView
                    style="@style/Menu.Image"
                    android:src="@drawable/topmenu_icn_exit" />

                <TextView
                    style="@style/Menu.Text"
                    android:text="退出应用" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>