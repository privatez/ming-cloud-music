<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ming.cloudmusic.view.TopActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="本地音乐" />

    <RadioGroup
        android:id="@+id/rg_localmusic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_single"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_localmusic_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="单曲"
            android:textColor="@drawable/selector_localmusic_text"
            android:textSize="@dimen/text_normal" />

        <RadioButton
            android:id="@+id/rb_art"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_localmusic_bg"
            android:button="@null"
            android:gravity="center"
            android:text="歌手"
            android:textColor="@drawable/selector_localmusic_text"
            android:textSize="@dimen/text_normal" />

        <RadioButton
            android:id="@+id/rb_album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_localmusic_bg"
            android:button="@null"
            android:gravity="center"
            android:text="专辑"
            android:textColor="@drawable/selector_localmusic_text"
            android:textSize="@dimen/text_normal" />

        <RadioButton
            android:id="@+id/rb_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_localmusic_bg"
            android:button="@null"
            android:gravity="center"
            android:text="文件夹"
            android:textColor="@drawable/selector_localmusic_text"
            android:textSize="@dimen/text_normal" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_localmusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>