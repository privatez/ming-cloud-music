<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="Ming"></style>

    <style name="Ming.Divider">
        <item name="android:background">@color/grey_lighter</item>
    </style>

    <style name="Ming.Divider.Horizontal" parent="Ming.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="Ming.BtnSubmitRed">
        <item name="android:background">@drawable/shape_bg_btn_red</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_normal</item>
    </style>

</resources>